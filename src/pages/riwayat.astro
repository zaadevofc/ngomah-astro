---
import { FaMotorcycle } from "react-icons/fa6";
import { GrTransaction } from "react-icons/gr";
import { TbCash, TbHelmet, TbWallet } from "react-icons/tb";
import { TiPlus } from "react-icons/ti";
import BottomBar from "../components/BottomBar.astro";
import Container from "../components/Container.astro";
import Main from "../components/Main.astro";

---

<Main>
    <Container class='flex flex-col mb-16'>
        <div class="">
            <h1 class="font-[poppins] font-bold text-xl p-4">Riwayat</h1>
        </div>
        <div class="flex flex-col p-4 px-6 gap-4 overflow-y-scroll">
            <h1 class="font-[poppins] text-sm font-semibold">{'>'} Ngojek</h1>
            {['Masjid Agung Baturetno', 'QTA Nurul Hidayah'].map((x) => (
                <div class="flex flex-row gap-5 items-center border-b border-slate-300 pb-4">
                    <div class="border border-green-600 p-2 rounded-full text-green-700">
                        <FaMotorcycle />
                    </div>
                    <div class="flex flex-col leading-tight w-full">
                        <div class="flex flex-row items-center justify-between w-full">
                            <h1 class="font-bold text-[16px] font-[poppins] line-clamp-1">{x}</h1>
                            <h1 class="text-[11px]">20:31</h1>
                        </div>
                        <div class="flex flex-col justify-start w-full">
                            <h1 class={`text-slate-500 text-[15px] line-clamp-1`}></h1>
                            <div class="flex flex-row items-center gap-2 my-1">
                                <TbHelmet className='text-black text-lg fill-green-500' />
                                <h1 class="text-gray-600 font-semibold">Sischa Ayu</h1>
                            </div>
                            <div class="flex flex-row items-center justify-between">
                                <h1 class="text-sm">Rp23.000</h1>
                                <div class="flex flex-row items-center gap-1">
                                    <TbCash />
                                    <h1 class="text-sm font-[poppins]">Cash</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
            <h1 class="font-[poppins] text-sm font-semibold">{'>'} Top Up</h1>
            {[['Top Up RP50.000', 'zaadevofc', <TiPlus />]].map((x) => (
                <div class="flex flex-row gap-5 items-center border-b border-slate-300 pb-4">
                    <div class="border border-green-600 p-2 rounded-full text-green-700">
                        {x[2]}
                    </div>
                    <div class="flex flex-col leading-tight w-full">
                        <div class="flex flex-row items-center justify-between w-full">
                            <h1 class="font-bold text-[16px] font-[poppins] line-clamp-1">{x[0]}</h1>
                            <h1 class="text-[11px]">20:31</h1>
                        </div>
                        <div class="flex flex-col justify-start w-full">
                            <h1 class={`text-slate-500 text-[15px] line-clamp-1`}></h1>
                            <div class="flex flex-row items-center justify-between">
                                <div class="flex flex-row items-center gap-2 my-1">
                                    <TbWallet className='text-black text-lg fill-green-500' />
                                    <h1 class="text-gray-600 font-semibold">{x[1]}</h1>
                                </div>
                                <h1 class="text-sm font-[poppins]">Alfamart</h1>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
            <h1 class="font-[poppins] text-sm font-semibold">{'>'} Transfer</h1>
            {[['Transfer Rp23.000', 'Nadiana', <GrTransaction />]].map((x) => (
                <div class="flex flex-row gap-5 items-center border-b border-slate-300 pb-4">
                    <div class="border border-green-600 p-2 rounded-full text-green-700">
                        {x[2]}
                    </div>
                    <div class="flex flex-col leading-tight w-full">
                        <div class="flex flex-row items-center justify-between w-full">
                            <h1 class="font-bold text-[16px] font-[poppins] line-clamp-1">{x[0]}</h1>
                            <h1 class="text-[11px]">20:31</h1>
                        </div>
                        <div class="flex flex-col justify-start w-full">
                            <h1 class={`text-slate-500 text-[15px] line-clamp-1`}></h1>
                            <div class="flex flex-row items-center gap-2 my-1">
                                <TbWallet className='text-black text-lg fill-green-500' />
                                <h1 class="text-gray-600 font-semibold">{x[1]}</h1>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </Container>
    <BottomBar />
</Main>