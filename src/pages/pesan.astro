---
import BottomBar from "../components/BottomBar.astro";
import Container from "../components/Container.astro";
import Main from "../components/Main.astro";

---

<Main>
    <Container class='flex flex-col mb-16'>
        <div class="">
          <h1 class="font-[poppins] font-bold text-xl p-4">Pesan</h1>
        </div>
        <div class="flex flex-col p-4 px-6 gap-4 overflow-y-scroll">
          {['Siti Nadiana', 'Sischa Ayu'].map((x, i) => (
            <div class="flex flex-row gap-5 items-center border-b border-slate-300 pb-4">
              <div class="w-12">
                <img class="w-full rounded-full" src="https://avatars.githubusercontent.com/u/93970726?v=4" alt="" />
              </div>
              <div class="flex flex-col leading-tight w-full">
                <div class="flex flex-row items-center justify-between w-full">
                  <h1 class="font-bold text-[16px] font-[poppins]">{x}</h1>
                  <h1 class="text-[11px]">20:31</h1>
                </div>
                <div class="flex flex-row items-center justify-between w-full">
                  <h1 class={`${i == 0 ? 'text-slate-900 font-medium' : 'text-slate-500'} text-[15px] line-clamp-1`}>Hallo kak ditunggu sebentar yaa!</h1>
                  {i == 0 && <span class="text-xs bg-red-500 px-[5.5px] py-[.1px] font-bold text-white rounded-full">1</span>}
                </div>
              </div>
            </div>
          ))}
        </div>
      </Container>
      <BottomBar />
</Main>