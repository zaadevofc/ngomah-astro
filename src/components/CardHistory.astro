---
import { FaStar } from "react-icons/fa";
import { TbHelmet } from "react-icons/tb";
---

<div class="flex flex-col m-4 my-6">
  <div class="flex flex-row items-center justify-between">
    <div class="flex flex-col justify-start">
      <h1 class="font-bold tracking-wide">Riwayat perjalanan mu</h1>
      <h1 class="text-[13px]">Semua riwayat udah kesimpen ~</h1>
    </div>
    <p class="text-sm text-slate-500">Lihat lainnya</p>
  </div>
  <div class="flex flex-row gap-3 overflow-x-auto pb-1 pt-5">
    {
      [...new Array(5)].map(() => (
        <div class="card min-w-[200px] click bg-base-100 drop-shadow-md sm:cursor-pointer">
          <figure class="h-[120px] rounded-2xl">
            <img src="/peta.jpg" alt="aada" />
          </figure>
          <div class="card-body text-sm p-4">
            <h1 class="card-title text-sm line-clamp-2">
              SMK Negeri 2 Sukoharjo
            </h1>
            <h1 class="text-gray-500 -mt-1">34km</h1>
            <div class="flex flex-row items-center gap-2">
              <TbHelmet className="text-black text-lg fill-green-500" />
              <h1 class="text-gray-700 font-semibold">Sischa Ayu</h1>
            </div>
            <div class="flex flex-row items-center justify-between">
              <div class="flex flex-row items-center gap-2">
                <FaStar className="text-black text-lg fill-yellow-500" />
                <h1 class="text-gray-700 font-semibold">4.7</h1>
              </div>
              <h1 class="text-gray-500 font-semibold">Rp24.000</h1>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
